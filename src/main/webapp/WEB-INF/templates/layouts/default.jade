-@ val height: String = "300"
-@ val width: String = "300"
-@ val shouldSimInteractions: String = "false"
-@ val shouldSimPhysics: String = "false"

!!! strict
html
  script(src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js")
  script(src="http://localhost:8080/cassie/c.js")
  script(src="http://localhost:8080/cassie/HashTable.js")
  script(src="http://localhost:8080/cassie/HashSet.js")
  script(src="http://localhost:8080/cassie/Error.js")
  script(src="http://localhost:8080/cassie/SymbolicWeight.js")
  script(src="http://localhost:8080/cassie/Strength.js")
  script(src="http://localhost:8080/cassie/Variable.js")
  script(src="http://localhost:8080/cassie/Point.js")
  script(src="http://localhost:8080/cassie/Expression.js")
  script(src="http://localhost:8080/cassie/Constraint.js")
  script(src="http://localhost:8080/cassie/EditInfo.js")
  script(src="http://localhost:8080/cassie/Tableau.js")
  script(src="http://localhost:8080/cassie/SimplexSolver.js")
  script(src="http://localhost:8080/cassie/Timer.js")
  script(src="http://localhost:8080/eddie/common.js")
  script(src="http://localhost:8080/eddie/helpers.js")
  script(src="http://localhost:8080/eddie/primitives.js")
  script(src="http://localhost:8080/eddie/library.js")
  script(src="http://localhost:8080/eddie/events.js")
  script(src="http://localhost:8080/eddie/display.js")
  script(src="http://localhost:8080/eddie/charts.js")
  script(src="http://localhost:8080/eddiflow/out/dfparser.js")
  script(src="http://localhost:8080/eddiflow/out/eddiflow.js")

  script
    | #{scrpt}

  script(src="http://localhost:8080/resources/common_main.js")



  body(style="width:700px; height:#{height}px;")
    div(style="width:#{width}px; height:#{height}px; float:left;")
      button(onclick="start();")
        | Start
      button(onclick="stop();")
        | Stop
      button(onclick="reset();")
        | Reset

      canvas(id="mainCanvas")
      img(id="iron" src="resources/weight.jpeg" height="400px" width="400px" style="display:none")
      img(id="mouse" src="resources/cursor.png" height="32" width="30" style="display:none")

    div(style="width:#{width}px; height:#{height}px; float:right;")
      canvas(id="chartCanvas" style="pointer-events:none")
      div(id='tickers')

  script
    | document.addEventListener('DOMContentLoaded', function() { c_main(#{height}, #{width}, #{shouldSimInteractions}, #{shouldSimPhysics});}, false);
