  script(src="http://localhost:8080/eddie/common.js")
  script(src="http://localhost:8080/eddie/helpers.js")
  script(src="http://localhost:8080/eddie/primitives.js")
  script(src="http://localhost:8080/eddie/library.js")

  script
    | #{scrpt}

  script(src="http://localhost:8080/resources/common_main.js")

  body(style="width:#{width}px; height:#{height}px;")
    div
      button(onclick="start();")
        | Start
      button(onclick="stop();")
        | Stop
      button(onclick="reset();")
        | Reset

    canvas(id="mainCanvas" style="position:absolute; z-index:0;")

    canvas(id="incCanvas" style="position:absolute; z-index:1; pointer-events:none;")

    img(id="iron" src="resources/weight.jpeg" height="400px" width="400px" style="display:none")

  script
    | document.addEventListener('DOMContentLoaded', function() { c_main();}, false);
