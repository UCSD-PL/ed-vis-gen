-@ val height: String = "400"
-@ val width: String = "400"

!!! strict
html
  script(src="http://localhost:8080/cassie/c.js")
  script(src="http://localhost:8080/cassie/HashTable.js")
  script(src="http://localhost:8080/cassie/HashSet.js")
  script(src="http://localhost:8080/cassie/Error.js")
  script(src="http://localhost:8080/cassie/SymbolicWeight.js")
  script(src="http://localhost:8080/cassie/Strength.js")
  script(src="http://localhost:8080/cassie/Variable.js")
  script(src="http://localhost:8080/cassie/Point.js")
  script(src="http://localhost:8080/cassie/Expression.js")
  script(src="http://localhost:8080/cassie/Constraint.js")
  script(src="http://localhost:8080/cassie/EditInfo.js")
  script(src="http://localhost:8080/cassie/Tableau.js")
  script(src="http://localhost:8080/cassie/SimplexSolver.js")
